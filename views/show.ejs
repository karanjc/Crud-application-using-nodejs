<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Application</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    


<div class = "container">
    <ul>
        <li><a class = "" href = "http://localhost:8080/"> HOME</a></li>
        <li><a href="/show">SHOW</a></li></ul>

<table>
    <thead>
        <tr> 
            <th>ID</th>
            <th>Name</th>
            <th> Email</th>
            <th> Control</th>


</tr></thead>
<tbody>
   <% students.forEach((student) =>{%>
    <tr>
        <td><%- student._id %></td>
        <td><%- student.name %></td>
        <td><%- student.email %></td>

        <td>
            <a href = "/edit/<%= student._id %>"><span class="yellow"> VIEW </span></a>
            <a href = "/delete/<%= student._id %>"><span class="yellow"> DELETE </span></a>
         </tr>
        <% }) %>

   




    
</table></div>

</body></html>